model Animal {
  id        String   @id @default(uuid())
  
  name      String
  species   String
  breed     String
  color     String
  age       Int      @default(0)
  weight    Float    @default(0)
  gender       Gender      @default(MALE)

  specialNeeds String?
  medicalNotes  String?
  behaviorNotes String?

  isBondedPairs Boolean @default(false)

  // Self relation for bonded pairs
  bondedWithId String?
  bondedWith   Animal? @relation("BondedPairs", fields: [bondedWithId], references: [id])
  bondedBy     Animal[] @relation("BondedPairs")

  imageId   String? @unique
  imageUrl  String?
  image     FileInstance? @relation(fields: [imageId], references: [id], onDelete: SetNull)

  shelter   Shelter @relation(fields: [shelterId], references: [id], onDelete: Cascade)
  shelterId String

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@map("animals")
}
